<?xml version="1.0" encoding="utf-8"?>
<com.github.takahirom.material_design_animation_playground.view.ForegroundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevation_card"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:stateListAnimator="@animator/raise">

    <ImageView
        android:id="@+id/implementation_imge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/implementation_image"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing_xlarge_48dp"
        android:background="#8f455964"
        app:layout_constraintBottom_toBottomOf="@+id/implementation_imge"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/implementation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal_8dp"
        android:layout_marginStart="@dimen/spacing_normal_8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />
</com.github.takahirom.material_design_animation_playground.view.ForegroundConstraintLayout>